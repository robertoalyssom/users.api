// Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  age   String
  ownerAccount UserAccount? @relation(fields: [ownerAccountId], references: [id], onDelete: Cascade)
  ownerAccountId String? @db.ObjectId
}

model UserAccount {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String

  // Relation to Contact (optional)
  contacts Contact[]
}